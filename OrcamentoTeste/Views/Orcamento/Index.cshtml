
@model List<Orcamento>

    <h2>Cadastro Orçamento</h2>
<table class="table table-hover table-striped"
       style="margin-top:15px;margin-bottom:15px">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Data</th>
            <th></th>


        </tr>
    </thead>
    <tbody>
        @foreach (Orcamento item in Model)
        {

            <tr>
                <td>@item.NomeCliente</td>
                <td>@item.Data</td>
               <td>
                    <a asp-action="Listar"
                       name="id"
                       asp-route-id="@item.IdOrcamento"
                       class="btn btn-info">
                        Vizualizar
                    </a>
                </td>

            </tr>




        }

    </tbody>
</table>
<div>
    <a asp-action="Cadastrar" class="btn btn-success"> Cadastrar Novo</a>
</div>
