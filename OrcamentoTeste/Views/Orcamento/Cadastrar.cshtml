@model Orcamento

@{

    ViewData["Title"] = "Cadastrar Produto";


}
<center><h2>Cadastrar Produto</h2></center>
<br />
<br />
<form asp-action="Cadastrar" method="post"
      enctype="multipart/form-data">
    <fieldset>
        <legend>Nome Cliente</legend>
        <div asp-validation-summary="ModelOnly"
             class="text-primary"></div>
     
        <div class="form-group" id="Valor">
            <label asp-for="NomeCliente"></label>
            <input type="text" class="form-control"
                   asp-for="NomeCliente" />
            <span asp-validation-for="NomeCliente"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Valor">
            <label asp-for="Data"></label>
            <input type="datetime"value="@DateTime.Now" disabled  class="form-control"
                   asp-for="Data" />
            <span asp-validation-for="Data"
                  class="text-primary"></span>
        </div>

        <div>
            <input type="submit" class="btn btn-success" value="Cadastrar" />
            <br><br />
        </div>

    </fieldset>
</form>